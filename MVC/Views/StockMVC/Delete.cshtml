@model Ingrediente
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0; 
        padding: 0;
        text-align: center; 
    }

    .footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 60px;
        line-height: 60px;
        display: flex;
        justify-content: center;
        align-content: end;
    }

    h1 {
        color: #8B4513;
        font-weight: bold;
    }

    form {
        background-color: #fcece1; 
        border: none;
    }
</style>
<h1>Delete Ingredient</h1>
<body>
    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" hidden />
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="border m-2 p-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Ingredient</h2>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <input asp-for="Id" hidden />

            <button type="submit" class="btn btn-primary" style="border-color:transparent">Delete</button>
            <a asp-controller="StockMVC" asp-action="Index" class="btn btn-secondary" style="color:#8b4513">Back</a>
        </div>
    </form>
</body>