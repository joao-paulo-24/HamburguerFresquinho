@model ProjetoLDS.Models.ContaUtilizador

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0; 
        padding: 0;
        text-align: center;
    }

    .footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 60px; 
        line-height: 60px; 
        display: flex;
        justify-content: center;
        align-content: end;
    }

    h2 {
        color: #8B4513;
        font-weight: bold;
    }

    form {
        background-color: #fcece1; 
        border: none;
    }
</style>

<body>
    <form method="post">
        <div class="border m-2 p-4">
            <div class="row pb-2">
                <h2 class="text-primary">Login</h2>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <div class="mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="border-color: transparent">Login</button>
            <p>
                <a asp-controller="Home" asp-action="Index">Back to Home</a>
            </p>
            <p>
                <a asp-controller="AuthMVC" asp-action="Register">Don't Have an account? Click here to create one!</a>
            </p>
        </div>
    </form>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
