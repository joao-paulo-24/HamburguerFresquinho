@model WebAPI.Models.Menu
@using ProjetoLDS.Models
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        padding: 0;
        text-align: center;
    }

    .footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 60px;
        line-height: 60px;
        display: flex;
        justify-content: center;
        align-content: end;
    }

    h1 {
        color: #8B4513;
        font-weight: bold;
    }

    .product-container {
        display: flex;
        flex-wrap: wrap;
        gap: 29px;
    }

    .product-card {
        flex: 0 0 calc(33.33% - 20px);
        box-sizing: border-box;
        border: 1px solid #ddd;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .product-card img {
            max-width: 100%;
            height: auto;
        }

        .product-card h3 {
            margin-top: 10px;
            color: #333;
        }

        .product-card p {
            color: #888;
        }

    .info-box {
        background-color: #ffffff; /* White background */
        border: 1px solid #dddddd; /* Light gray border */
        padding: 10px; /* Padding around the content */
        margin-bottom: 10px; /* Bottom margin for spacing between boxes */
        font-size: 16px; /* Increase font size */
    }
</style>



<h1>Detalhes do Menu</h1>
<body>
    <div class="info-box">
        <div>
            <label for="menuName">
                <span style="color: #8B4513; font-weight: bold">Nome do Menu:</span> @Model.Name
            </label>
        </div>

        <div>
            <label for="menuPrice">
                <span style="color: #8B4513; font-weight: bold">Preço do Menu:</span> @(Model.Preco / 100M)€
            </label>
        </div>

        <div>
            <label for="menuPoints">
                <span style="color: #8B4513; font-weight: bold">Pontos Necessários:</span> @Model.PontosNecessarios
            </label>
        </div>
    </div>

    <div class="product-container">
        @foreach (var item in ViewBag.ItemAtribuido)
        {
            <div class="product-card">
                <!-- Adicione a imagem do item aqui -->
                <img src="~/Images/ItemImages/@item.ImagePath" alt="Imagem do Item" style="width: 200px; height: 200px; object-fit: cover; display: block; margin: 0 auto;">

                <h3>@item.Name</h3>
                <p>@item.Preco</p>
            </div>
        }
    </div>
    <a asp-controller="MenuMVC" asp-action="Index" class="btn btn-secondary" style="color:#8b4513">Back</a>

</body>